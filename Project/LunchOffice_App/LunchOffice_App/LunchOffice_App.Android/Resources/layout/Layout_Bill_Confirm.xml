<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/Gray_BackgroundColor2">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout19"
        android:weightSum="10">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout1"
            android:layout_weight="1"
            android:weightSum="10"
            android:background="@color/Gray_BackgroundColor">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_weight="0">
                <Button
                    android:text="x"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/BillConfirm_btnClose"
                    android:background="#FAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_weight="0">
                <TextView
                    android:text="Lunch Office - Xác Nhận Hoá Đơn"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:textStyle="bold"
                    android:textColor="@color/Gray_TextMainColor"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout2"
            android:layout_weight="1.25"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:weightSum="10">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout20"
                android:layout_weight="9">
                <TextView
                    android:text="Giao đến"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:text="Text 123 Nguyễn Trãi Phường 1 Quận 1 Thành phố Hồ Chí Minh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_tvAddress"
                    android:textColor="@color/Gray_TextMainColor"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:layout_marginLeft="8dp"
                    android:lines="2"
                    android:maxLines="2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/linearLayout22"
                android:layout_weight="1"
                android:gravity="center"
>
                <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_btnChangeAddress"
                    android:background="@color/Gray_BackgroundColor"
                    android:drawableTop="@drawable/ic_edit"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:weightSum="10"
            android:visibility="gone">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout22"
                android:layout_weight="9">
                <TextView
                    android:text="Số điện thoại"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:text="000000000"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_tvPhone"
                    android:textColor="@color/Gray_TextMainColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout21"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_btnChangePhone"
                    android:background="@color/Gray_BackgroundColor"
                    android:drawableTop="@drawable/ic_edit"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout4"
            android:layout_weight="6.75"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:weightSum="8">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearLayout9"
                android:layout_weight="1">
                <TextView
                    android:text="Menu"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearLayout23"
                android:layout_weight="7">
                <android.support.v7.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/BillConfirm_recyclerData" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout7"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:weightSum="10"
            android:visibility="gone">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout24"
                android:layout_weight="9">
                <TextView
                    android:hint="+ Thêm ghi chú"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_tvNote"
                    android:lines="3"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout21"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_btnChangeNote"
                    android:background="@color/Gray_BackgroundColor"
                    android:drawableTop="@drawable/ic_edit"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout8"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:weightSum="2"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout14"
                android:layout_weight="1.5"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout15"
                    android:layout_weight="1.25"
                    android:weightSum="2">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout25"
                        android:layout_weight="1"
                        android:weightSum="2">
                        <TextView
                            android:text="Phí Ship:"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="9,000,000 VNĐ"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/BillConfirm_tvShip"
                            android:layout_marginLeft="8dp"
                            android:textStyle=""
                            android:textColor="#000"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout25"
                        android:layout_weight="1"
                        android:weightSum="2">
                        <TextView
                            android:text="Tiền hàng:"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:textColor="#000"
                            android:text="9,000,000 VNĐ"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/BillConfirm_tvPrice"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout16"
                    android:layout_weight="0.75">
                    <Button
                        android:layout_margin="8dp"
                        android:text="Đặt Hàng"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/BillConfirm_btnConfirm"
                        android:background="@drawable/layout_login_2_button_login"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
