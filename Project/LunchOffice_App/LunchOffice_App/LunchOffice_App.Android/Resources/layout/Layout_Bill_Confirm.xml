<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/Gray_BackgroundColor2">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout19"
        android:weightSum="10">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout1"
            android:layout_weight="1"
            android:weightSum="10"
            android:background="@color/Gray_BackgroundColor">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_weight="0">
                <Button
                    android:text="x"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/BillConfirm_btnClose"
                    android:background="#FAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_weight="0">
                <TextView
                    android:text="Lunch Office - Xác Nhận Hoá Đơn"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:textStyle="bold"
                    android:textColor="@color/Gray_TextMainColor"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout2"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:weightSum="10">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout20"
                android:layout_weight="8">
                <TextView
                    android:text="Giao đến"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:text="39 Đường Nguyễn Trãi"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_tvAddress"
                    android:textColor="@color/Gray_TextMainColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout21"
                android:layout_weight="2"
                android:gravity="center">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/BillConfirm_btnChangeAddress"
                    android:gravity="center_horizontal|center"
                    app:textAllCaps="false"
                    android:textSize="12sp"
                    android:background="@color/Gray_BackgroundColor"
                    android:layout_marginLeft="8dp"
                    android:drawableTop="@drawable/ic_edit"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:weightSum="10">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout22"
                android:layout_weight="8">
                <TextView
                    android:text="Số điện thoại"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:text="123456789"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BillConfirm_tvPhone"
                    android:textColor="@color/Gray_TextMainColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout21"
                android:layout_weight="2"
                android:gravity="center">
                <Button
                    android:layout_marginLeft="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/BillConfirm_btnChangePhone"
                    android:gravity="center_horizontal|center"
                    app:textAllCaps="false"
                    android:textSize="12sp"
                    android:background="@color/Gray_BackgroundColor"
                    android:drawableTop="@drawable/ic_edit"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout4"
            android:layout_weight="4"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:weightSum="4">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearLayout9"
                android:layout_weight="1">
                <TextView
                    android:text="Menu"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout23"
                android:layout_weight="3">
                <android.support.v7.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout7"
            android:layout_weight="1"
            android:background="@color/Gray_BackgroundColor"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:text="+ Thêm ghi chú"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_weight="0"
        android:background="@color/Gray_BackgroundColor"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout13"
            android:layout_weight="0"
            android:weightSum="2"
            android:layout_margin="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout17"
                android:layout_weight="1">
                <Button
                    android:layout_margin="8dp"
                    android:text="Tiền mặt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:background="@color/Gray_BackgroundColor"
                    android:textColor="@color/Green_MainColor"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout18"
                android:layout_weight="1">
                <Button
                    android:layout_margin="8dp"
                    android:text="Mã Khuyến Mãi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:background="@color/Gray_BackgroundColor"
                    android:textColor="@color/Green_MainColor"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout14"
            android:layout_weight="1"
            android:weightSum="2">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout15"
                android:layout_weight="1">
                <TextView
                    android:text="Tổng tiền:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:text="45.000d"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout16"
                android:layout_weight="1">
                <Button
                    android:layout_margin="8dp"
                    android:text="Đặt Hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:background="@drawable/layout_bill_confirm_btnorder"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
