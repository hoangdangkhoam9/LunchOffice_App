<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout1"
        android:layout_weight="10"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Đăng Ký Tài Khoản"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.25"
            android:weightSum="6"
            android:id="@+id/linearLayout4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtTaiKhoan"
                android:hint="Tài khoản"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc"/>
            <EditText
                android:layout_margin="4dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtMatKhau"
                app:backgroundTint="#cccccc"
                android:hint="Mật khẩu"
                android:layout_weight="1"/>
            <EditText
                android:layout_margin="4dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtConfirmMatKhau"
                app:backgroundTint="#cccccc"
                android:hint="Nhập lại mật khẩu"
                android:layout_weight="1"/>


            <EditText
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtSoDienThoai"
                android:hint="Số điện thoại"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc"/>
            <EditText
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:hint="Địa chỉ Email"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtEmail"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc"/>

            <EditText
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:hint="Địa chỉ"
                android:layout_height="wrap_content"
                android:id="@+id/Register_edtDiaChi"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout6"
                android:layout_weight="1"
                android:weightSum="1"
                android:layout_marginTop="10dp">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerQuan"
                    android:layout_weight="0.5"
                    android:layout_marginRight="3dp"
                    android:textAlignment="center" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerPhuong"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="3dp"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_margin="8dp"
            android:id="@+id/linearLayout5">
            <Button
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:text="Đăng Ký"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/Register_btnRegister"
                android:background="@drawable/layout_login_2_button_login"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
