<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" 
        android:layout_weight="1">
        <Button
            android:text="x"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button1"
            android:background="#FAFAFA" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2" 
        android:layout_weight="1"
        android:weightSum="10">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout5" 
            android:layout_weight="7">
            <TextView
                android:text="Chè Khúc Bạch"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="25sp" />
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6" 
            android:layout_weight="3">
            <TextView
                android:text="30.000d"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="right" 
                android:layout_marginRight="8dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3" 
        android:layout_weight="1">
        <TextView
            android:text="+ Note to Restaurant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4" 
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4" 
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout7"
            android:gravity="center">
            <Button
                android:text="-"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button2"
                android:background="@drawable/layout_food_detail_additem_btnupdown"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCount"
                android:textSize="25sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#ff000000"
                android:textStyle="bold" />
            <Button
                android:text="+"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button3"
                android:background="@drawable/layout_food_detail_additem_btnupdown"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8" 
        android:layout_weight="1">
        <Button
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_food_detail_additem_btnadd"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
