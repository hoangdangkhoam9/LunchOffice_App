<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_margin="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5">
            <TextView
                android:text="Chè Khúc Bạch"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddItem_tvFoodName"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6">
            <TextView
                android:text="30.000d"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddItem_tvPrice"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_margin="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout7"
            android:gravity="center">
            <Button
                android:text="-"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/AddItem_btnDecrease"
                android:background="@drawable/layout_food_detail_additem_btnupdown"
                android:textStyle="bold"
                android:textSize="30sp" />
            <TextView
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AddItem_tvCount"
                android:textSize="40sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#ff000000"
                android:textStyle="bold" />
            <Button
                android:text="+"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/AddItem_btnIncrease"
                android:background="@drawable/layout_food_detail_additem_btnupdown"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_margin="8dp">
        <Button
            android:text="Thêm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/AddItem_btnAdd"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:background="@drawable/layout_login_2_button_login"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
