<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="10">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="9">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout5"
                android:layout_margin="3dp"
                android:background="@drawable/layout_food_category_searchbar_background"
                android:weightSum="10">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_search"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/FoodCategory_edtSearch"
                    android:textSize="14sp"
                    android:layout_weight="10"
                    android:hint="Nhập tên món ăn cần tìm kiếm ..."
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="8dp" />
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_deletetext"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:id="@+id/FoodCategory_imgDeleteText" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_weight="1">
            <Button
                android:text="Trở lại"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/FoodCategory_btnCancel"
                android:gravity="center_horizontal|center"
                app:textAllCaps="false"
                android:textSize="12sp"
                android:background="@color/Gray_BackgroundColor" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout2"
        android:layout_weight="10">
        <android.support.v7.widget.RecyclerView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/FoodCategory_RecyclerView_Data"
            android:background="@android:color/transparent" />

    </LinearLayout>


</LinearLayout>
