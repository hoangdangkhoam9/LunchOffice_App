<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout1"
        android:layout_weight="10"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/linearLayout3">
            <FrameLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/frameLayout1"
                android:layout_weight="3">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_logo_rectangle2"
                />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/linearLayout4">
            <EditText
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Login2_edtEmail"
                android:hint="Tên tài khoản"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc" />
            <EditText
                android:layout_margin="4dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:hint="Mật Khẩu"
                android:layout_height="wrap_content"
                android:id="@+id/Login2_edtPassword"
                android:layout_weight="1"
                android:textSize="20sp"
                app:backgroundTint="#cccccc" />

            <TextView
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:text="Đăng ký tài khoản"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegister"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="20sp"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="3"
            android:layout_margin="8dp"
            android:id="@+id/linearLayout5">
            <Button
                android:textColor="#fff"
                android:layout_margin="2dp"
                android:text="Đăng nhập"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/Login2_btnLogin"
                android:background="@drawable/layout_login_2_button_login"
                android:textStyle="bold"
                android:textSize="16sp" />
            <Button
                android:textColor="#333"
                android:layout_margin="2dp"
                android:text="Đăng nhập với Google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Login2_btnGoogle"
                android:drawableStart="@drawable/ic_layout_login_2_google"
                android:layout_weight="1"
                android:background="@drawable/layout_login_2_button_google"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:alpha="0.7"/>

            <Button
                android:textColor="#fff"
                android:layout_margin="2dp"
                android:text="Đăng nhập với Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Login2_btnFacebook"
                android:background="@drawable/layout_login_2_button_facebook"
                android:drawableStart="@drawable/ic_layout_login_2_facebook2"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:alpha="0.7"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
