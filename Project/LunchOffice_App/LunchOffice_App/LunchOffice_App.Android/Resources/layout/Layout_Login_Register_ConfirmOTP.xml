<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_weight="3"
        android:gravity="center"
        android:weightSum="10">
        <EditText
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textColorHint="#000"
            android:hint="123456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ConfirmOTP_edtOTP"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:layout_weight="4"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_weight="7"
        android:weightSum="4">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn1"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn2"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn3"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn4"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn5"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn6"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn7"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn8"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn9"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3"
            android:layout_weight="1"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="Xoá"
                    android:textAllCaps="false"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btnDelete"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@color/Gray_BackgroundColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="0"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btn0"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@drawable/layout_food_detail_additem_btnupdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="Gửi"
                    android:textAllCaps="false"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ConfirmOTP_btnSend"
                    android:textColor="@color/Orange_MainColor"
                    android:textSize="30sp"
                    android:background="@color/Gray_BackgroundColor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
