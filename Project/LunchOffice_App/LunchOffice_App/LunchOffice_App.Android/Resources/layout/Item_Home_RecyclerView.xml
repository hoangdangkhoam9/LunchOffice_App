<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ItemHomeRecy_linearContent">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:weightSum="4"
            android:layout_margin="4dp"
            android:background="@drawable/layout_home_recyclerview_item_shape_2">
            <ImageView
                android:src="@drawable/icon"
                android:adjustViewBounds="true"
                android:background="@drawable/layout_home_recyclerview_item_shape"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/ItemHomeRecy_imgDish"
                android:layout_weight="0"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout1">
                <TextView
                    android:text="Dish Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ItemHomeRecy_tvDishName"
                    android:maxLines="2"
                    android:textStyle="bold|italic" />
                <TextView
                    android:text="Dish category"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ItemHomeRecy_tvDishCategory"
                    android:maxLines="2" />
                <TextView
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ItemHomeRecy_tvDishPrice"
                    android:maxLines="2" />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
